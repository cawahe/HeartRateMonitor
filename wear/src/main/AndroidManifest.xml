<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="eu.vranckaert.heart.rate.monitor">

    <uses-feature android:name="android.hardware.type.watch"/>

    <!-- Broadcast Receivers -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <!-- Ambient Mode -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <!-- Heart Rate -->
    <uses-permission android:name="android.permission.BODY_SENSORS"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:theme="@android:style/Theme.DeviceDefault.Light"
        android:name=".WearHeartRateApplication">
        <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version" />

        <uses-library
            android:name="com.google.android.wearable"
            android:required="false"/>

        <activity
            android:name=".controller.HeartRateActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".controller.HeartRateTestActivity"
            android:label="Heart Rate Monitor Test">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <receiver
            android:name=".controller.SetupBroadcastReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED"/>
            </intent-filter>
        </receiver>

        <service android:name=".controller.HeartRateMonitorIntentService"/>

        <service android:name=".controller.HearRateMonitorWearableListenerService">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.BIND_LISTENER"/>
            </intent-filter>
        </service>
    </application>

</manifest>
