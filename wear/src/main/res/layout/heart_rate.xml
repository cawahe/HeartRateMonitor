<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                              xmlns:tools="http://schemas.android.com/tools"
                                              xmlns:app="http://schemas.android.com/apk/res-auto"
                                              android:orientation="vertical"
                                              android:layout_width="match_parent"
                                              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_box="all">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schedule in 1 min"
            android:layout_centerHorizontal="true"
            android:id="@+id/schedule_test"
            android:layout_above="@+id/heart_rate"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/heart_rate"
            android:layout_centerInParent="true"
            android:text="-- BPM"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/diagnostics"
            android:layout_below="@id/heart_rate"
            android:layout_centerHorizontal="true"
            tools:text="DIAGNOSTICS HERE"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="START"
            android:layout_below="@id/diagnostics"
            android:layout_centerHorizontal="true"
            android:id="@+id/start_stop"/>
    </RelativeLayout>
</android.support.wearable.view.BoxInsetLayout>